<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.inventory</groupId>
	<artifactId>inventory-management-web</artifactId>
	<packaging>bundle</packaging>
	<name>Inventory Managememt Portlet</name>
	<version>1.0.0-SNAPSHOT</version>
	<build>
	
		<plugins>
			<plugin>
				<groupId>com.liferay.maven.plugins</groupId>
				<artifactId>liferay-maven-plugin</artifactId>
				<version>6.2.10.6</version>
 
				<configuration>
					<autoDeployDir>${liferay.auto.deploy.dir}</autoDeployDir>
					<appServerDeployDir>${liferay.app.server.deploy.dir}</appServerDeployDir>
					<appServerLibGlobalDir>${liferay.app.server.lib.global.dir}</appServerLibGlobalDir>
					<appServerPortalDir>${liferay.app.server.portal.dir}</appServerPortalDir>
					<liferayVersion>7.0.0</liferayVersion>
					<pluginType>portlet</pluginType>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.5.3</version>
				<extensions>true</extensions>	 
				<configuration>
					<instructions>					  
						<Bundle-SymbolicName>Stock.Viewer</Bundle-SymbolicName>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Export-Package>com.inventory.portlet*</Export-Package>
						<Import-Package>
  						com.inventory.service*,	
  						com.inventory.dao*,			
						javax.portlet;version="2.0",
						org.osgi.framework;version="1.7,2",						
						org.apache.jasper.runtime;version="[2.3.2,3.0)",
						com.sun.el;version="[3.0.0,4.0)",
						com.liferay.portal.kernel.portlet.bridges.mvc;version="[7.0.0,8.0.0)",
						org.apache.taglibs.standard.tlv*;version="[1.2.3,2. 0)",
						*;resolution:=optional</Import-Package>
						<Web-ContextPath>/inventory-management-web</Web-ContextPath>
						<DynamicImport-Package> 
							org.apache.jasper.servlet,
							org.eclipse.jetty.servlet.listener
						</DynamicImport-Package>		 
						<Include-Resource>
						@src/main/webapp/WEB-INF/lib/util-taglib-7.0.0-SNAPSHOT.jar,
						@src/main/webapp/WEB-INF/lib/alloy-taglib.jar,
						@src/main/webapp/WEB-INF/lib/jstl-api.jar,
						@src/main/webapp/WEB-INF/lib/jstl-impl.jar,
						META-INF/resources=src/main/webapp,
						META-INF/=src/main/webapp/WEB-INF/tld
						</Include-Resource>
						<Embed-Dependency>util-bridges,util-java</Embed-Dependency>
						<Bundle-Icon>icon.png;size=16</Bundle-Icon>
						<_dsannotations>*</_dsannotations>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
