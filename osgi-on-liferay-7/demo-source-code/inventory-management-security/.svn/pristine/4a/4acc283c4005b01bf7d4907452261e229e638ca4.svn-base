<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.inventory.security</groupId>
	<artifactId>com.inventory.security</artifactId>
	<packaging>bundle</packaging>
    <name>Inventory Management Security</name> 
	<version>1.0.0-SNAPSHOT</version>
	  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
    <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.5.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        
                        <Export-Package>com.inventory.security*</Export-Package>
                        <Import-Package>org.osgi.framework;version="[1.7,2)",*</Import-Package>
                        <_dsannotations>*</_dsannotations>
                    </instructions>
                </configuration>
            </plugin>
            
    </plugins>
  </build>
    
   <!-- BUNDLE PACKAGING -->

